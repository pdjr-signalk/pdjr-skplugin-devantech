{
    "type": "object",
    "properties": {
        "global": {
            "title": "Global settings",
            "type": "object",
            "required": [ "trigger", "triggerstates", "switchpath", "pollinterval" ],
            "properties": {
                "trigger": {
                    "title": "Default trigger path",
                    "type": "string",
                    "default": "notifications.control.{m}.{c}"
                },
                "triggerstates": {
                    "title": "Default notification trigger 'ON' states",
                    "type": "array",
                    "default": [ "alert", "alarm", "emergency" ],
                    "items": {
                        "type": "string",
                        "enum": [ "normal", "alert", "alarm", "emergency" ]
                    },
                    "uniqueItems": true
                },
                "switchpath": {
                    "title": "Relay module switch path",
                    "type": "string",
                    "default": "electrical.switches.{m}.{c}"
                },
                "pollinterval": {
                    "title": "Switch polling frequency in ms",
                    "type": "number",
                    "default": 0
                }
            }
        },
        "devices": {
            "title": "Device definitions",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": { "title": "Device identifier", "type": "string" },
                    "size": { "title": "Number of relay channels", "type": "number" },
                    "protocols": {
                        "title": "Protocols supported by this module",
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id": { "title": "Protocol id", "type": "string", "enum": [ "http", "https", "tcp", "usb" ] },
                                "status": { "title": "Status command", "type": "string" },
                                "commands" : {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "channel": { "title": "Relay channel index", "type": "number" },
                                            "on": { "title": "ON command", "type": "string" },
                                            "off": { "title": "OFF command", "type": "string" }
                                        }
                                    }
                                }
                            }
                        }
                    } 
                }
            },
            "default": [
                {
                    "id": "USB-RELAY02",
                    "size": 2,
                    "protocols": [
                        {
                            "id": "usb",
                            "status": "[",
                            "commands": [
                                { "channel": 1, "on": "e", "off": "o" },
                                { "channel": 2, "on": "f", "off": "p" }
                            ]
                        }
                    ]
                }
            ]
        },
        "modules" : {
            "title": "Module definitions",
            "type": "array",
            "default": [],
            "items": {
                "type": "object",
                "required": [ "id", "deviceid", "cstring", "channels" ],
                "properties": {
                    "deviceid": { "title": "Device id", "type": "string" },
                    "id": { "title": "Signalk module id", "type": "string" },
                    "cstring": { "title": "Connection string", "type": "string" },
                    "description": { "title": "Module description", "type": "string" },
                    "channels": {
                        "type": "array",
                        "default": [],
                        "items": {
                            "type": "object",
                            "required": [ "index" ],
                            "properties": {
                                "index": { "title": "Device relay index", "type": "number" },
                                "id": { "title": "Signal K channel id", "type": "string" },
                                "description": { "title": "Channel description", "type": "string" },
                                "trigger": { "title": "Trigger path", "type": "string" },
                                "triggerstates": { "title": "Notification trigger ON states", "type": "array", "items": { "type": "string" } }
                            }
                        }
                    }
                }
            }
        }
    }
}
